{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "echo 'node node_modules/pre-commit && git update-index --again' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "generate-icons": "svg2png -c svg2png.config.json -n '' -f src/assets/gin-rummy-scoreboard.svg",
    "dev": "vite --host 0.0.0.0",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "pnpx eslint . --ext .js,.ts,.vue --fix --max-warnings=0",
    "format": "pnpx prettier --log-level warn --write ."
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@xstate/vue": "^5.0.0",
    "canvas-confetti": "^1.9.4",
    "tailwindcss": "^4.2.1",
    "vue": "^3.5.28",
    "vue-i18n": "^11.2.8",
    "workbox-window": "^7.4.0",
    "xstate": "^5.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@intlify/eslint-plugin-vue-i18n": "^4.2.0",
    "@intlify/unplugin-vue-i18n": "^11.0.7",
    "@playwright/test": "^1.58.2",
    "@prettier/plugin-xml": "^3.4.2",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.3.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.8.0",
    "globals": "^17.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.8.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vue-tsc": "^3.2.5"
  }
}
