{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "echo 'node node_modules/pre-commit && git update-index --again' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "generate-icons": "svg2png -c svg2png.config.json -n '' -f src/assets/gin-rummy-scoreboard.svg",
    "dev": "vite --host 0.0.0.0",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "pnpx eslint . --ext .js,.ts,.vue --fix",
    "format": "pnpx prettier --log-level warn --write ."
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@xstate/vue": "^5.0.0",
    "canvas-confetti": "^1.9.3",
    "tailwindcss": "^4.1.12",
    "vue": "^3.5.18",
    "xstate": "^5.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@types/canvas-confetti": "^1.9.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "pre-commit": "^1.2.2",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3",
    "vue-tsc": "^3.0.5"
  }
}
